{% extends 'admin/layouts/base.html.twig' %}

{% block title %}Véhicule #{{ car.id }}{% endblock %}

{% block body %}
    <h1>Véhicule #{{ car.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ car.name }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ car.year }}</td>
            </tr>
            <tr>
                <th>Kilométrage</th>
                <td>{{ car.mileage }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ car.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ car.image }}" alt="Véhicule #{{ car.id }}"/></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ car.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_cars_index') }}" class="btn btn-secondary">Retour</a>

    <a href="{{ path('admin_cars_edit', {'id': car.id}) }}" class="btn btn-primary">Éditer</a>

    {{ include('admin/cars/_delete_form.html.twig') }}
{% endblock %}
