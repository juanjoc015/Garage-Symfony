{% extends 'admin/layouts/base.html.twig' %}

{% block title %}Avis #{{ review.id }}{% endblock %}

{% block body %}
    <h1>Avis #{{ review.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ review.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ review.lastname }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ review.message }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ review.rating }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ review.createdAt ? review.createdAt|date('Y-m-d H:i') : '-' }}</td>
            </tr>
            <tr>
                <th>Validé ?</th>
                <td>{{ review.enabled ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_review_toggle', {id: review.id}) }}" class="btn btn-primary">
        {{ review.enabled ? 'Invalider' : 'Valider' }}
    </a>

    <a href="{{ path('admin_review_index') }}" class="btn btn-secondary">Retour</a>

    {{ include('admin/review/_delete_form.html.twig') }}
{% endblock %}
