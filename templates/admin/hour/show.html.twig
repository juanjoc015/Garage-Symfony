{% extends 'admin/layouts/base.html.twig' %}

{% block title %}Voir{% endblock %}

{% block body %}
    <h1>Horaire #{{ hour.id }}</h1>

    <table class="table m-4">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ hour.id }}</td>
            </tr>
            <tr>
                <th>Jour</th>
                <td>{{ hour.day }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ hour.startDate ? hour.startDate|date('H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ hour.endDate ? hour.endDate|date('H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Ferm√©?</th>
                <td>{{ hour.closed ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_hour_index') }}" class="btn btn-secondary">Retour</a>

    <a href="{{ path('admin_hour_edit', {'id': hour.id}) }}" class="btn btn-primary">Editer</a>

    {{ include('admin/hour/_delete_form.html.twig') }}
{% endblock %}
