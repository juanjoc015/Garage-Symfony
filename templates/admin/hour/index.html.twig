<!DOCTYPE html>

<title>Hour index</title>

{% block body %}
    <h1>Hour index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>Closed</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hour in hours %}
            <tr>
                <td>{{ hour.id }}</td>
                <td>{{ hour.startDate ? hour.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ hour.endDate ? hour.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ hour.closed ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('admin_hour_show', {'id': hour.id}) }}">show</a>
                    <a href="{{ path('admin_hour_edit', {'id': hour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_hour_new') }}">Create new</a>
{% endblock %}
