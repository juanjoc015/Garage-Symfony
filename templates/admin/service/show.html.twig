{% extends 'admin/layouts/base.html.twig' %}

{% block title %}Le service #{{ service.id }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Le service #{{ service.id }}</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>#</th>
					<td>{{ service.id }}</td>
				</tr>
				<tr>
					<th>Titre</th>
					<td>{{ service.title }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ service.description }}</td>
				</tr>
			</tbody>
		</table>

		<a href="{{ path('admin_service_index') }}" class="btn btn-secondary">Retour</a>

		<a href="{{ path('admin_service_edit', {'id': service.id}) }}" class="btn btn-primary">Editer</a>

		{{ include('admin/service/_delete_form.html.twig') }}
	</div>
{% endblock %}
