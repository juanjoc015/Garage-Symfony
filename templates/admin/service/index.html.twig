{% extends 'admin/layouts/base.html.twig' %}

{% block title %}Les services{% endblock %}

{% block body %}

    <div class="container">
        <h1>Les services</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for service in services %}
                <tr>
                    <td>{{ service.id }}</td>
                    <td>{{ service.title }}</td>
                    <td>
                        <a href="{{ path('admin_service_show', {'id': service.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                        <a href="{{ path('admin_service_edit', {'id': service.id}) }}" class="btn btn-primary btn-sm">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun service trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('admin_service_new') }}" class="btn btn-primary">Ajouter</a>
    </div>
{% endblock %}
