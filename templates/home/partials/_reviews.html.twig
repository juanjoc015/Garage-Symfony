<section class="container my-5">
	<h2 class="text-center mb-4 title-avis">Avis des clients</h2>

	<div class="row">
		{% for review in reviews %}
			<div class="col-lg-4 mb-4">
				<div class="card h-100">
					<div class="card-body comentaire">
						<h5 class="card-title">{{ review.lastname }}</h5>
						<p class="card-text">{{ review.message }}</p>
						<div class="stars">
							{% for i in 1..5 %}
								{% if i <= review.rating %}
									<i class="star fas fa-star selected"></i>
								{% else %}
									<i class="star far fa-star"></i>
								{% endif %}
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<div class="text-center">
		<a href="{{ path('review_index') }}" class="btn btn-primary w-25">Voir plus d'avis</a>
	</div>
</section>

<section class="container my-5">
	<h3 class="text-center mb-4">Votre avis nous intéresse</h3>
	<div class="row">
		<div class="col-lg-8 mx-auto">
			{{ form_start(review_form, {'attr':{'id':'avisForm'}}) }}
			<div class="mb-3">
				{{ form_row(review_form.lastname) }}
			</div>

			<div class="mb-3">
				{{ form_row(review_form.message) }}
			</div>
			<div class="mb-3">
				<label for="rating" class="form-label">Évaluez-nous</label>
				<div id="stars">
					{% for i in 1..5 %}
						<i class="star far fa-star"></i>
					{% endfor %}
				</div>
				{{ form_row(review_form.rating, {'attr':{'id':'rating'}}) }}
			</div>
			<div class="d-flex justify-content-end">
				<button type="submit" class="btn btn-primary">Poster l'avis</button>
			</div>
			{{ form_end(review_form) }}
		</div>
	</div>
</section>
